{
  "compilerOptions": {
      "target": "ESNext",
      "module": "NodeNext",
      "rootDir": "./",
      "baseUrl": "./",
      "paths": {
          "@/*": ["./src/*"],
          "@models/*": ["./src/db/models/*"]
      },
      "typeRoots": [
          "./node_modules/@types",
          "./src/types"
      ],
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "files": ["./src/types/index.d.ts", "./src/types/declarations.d.ts"],
  "exclude": ["./node_modules"]
}